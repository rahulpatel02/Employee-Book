@model Employee

@{
    ViewData["Title"] = "Update";
}


<div class="text-center">

	<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UpdateEmp">
		<div class="form-group">
			<label asp-for="Id">Id</label>
			<input type="text" asp-for="Id" class="form-control" placeholder="@Model.Id">
			<span asp-validation-for="Id"></span>
		</div>

		<div class="form-group">
			<label asp-for="Name">Name</label>
			<input type="text" asp-for="Name" class="form-control" placeholder="@Model.Name">
			<span asp-validation-for="Name"></span>
		</div>


		<div class="form-group">
			<label asp-for="Email">Email address</label>
			<input type="email" asp-for="Email" class="form-control" placeholder="@Model.Email">
			<span asp-validation-for="Email"></span>
		</div>
		<div class="form-group">
			<label asp-for="Phone">Phone</label>
			<input type="number" asp-for="Phone" class="form-control" placeholder="@Model.Phone">
			<span asp-validation-for="Phone"></span>
		</div>
		<div class="form-group">
			<label asp-for="Address">Address</label>
			<input type="text" asp-for="Address" class="form-control" placeholder="@Model.Address">
			<span asp-validation-for="Address"></span>
		</div>


		<button type="submit" class="btn btn-primary">Submit</button>
	</form>

 </div>