@{
    ViewData["Title"] = "Add";
}
@model Employee
<div class="text-center">

	<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="AddEmployee">
		<div class="form-group">
			<label asp-for="Name">Name</label>
			<input type="text" asp-for="Name" class="form-control" placeholder="Enter name">
			<span asp-validation-for="Name"></span>
		</div>


		<div class="form-group">
			<label asp-for="Email">Email address</label>
			<input type="email" asp-for="Email" class="form-control" placeholder="Enter email">
			<span asp-validation-for="Email"></span>
		</div>
		<div class="form-group">
			<label asp-for="Phone">Phone</label>
			<input type="number" asp-for="Phone" class="form-control" placeholder="Enter phone number">
			<span asp-validation-for="Phone"></span>
		</div>
		<div class="form-group">
			<label asp-for="Address">Address</label>
			<input type="text" asp-for="Address" class="form-control" placeholder="Enter Address">
			<span asp-validation-for="Address"></span>
		</div>


		<button type="submit" class="btn btn-primary">Submit</button>
	</form>

 </div>